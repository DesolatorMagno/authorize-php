{
    "name": "desolatormagno/authorize-php",
    "description": "Update For SDK from Authorize",
    "keywords": [
        "DesolatorMagno",
        "authorize-php"
    ],
    "homepage": "https://github.com/desolatormagno/authorize-php",
    "license": "MIT",
    "authors": [
        {
            "name": "Reny Ramos",
            "email": "renyramosgarcia@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "ext-curl": "*",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^7.5",
        "symfony/yaml": "^5.4|^6.0|^7.0",
        "jms/serializer": "^3.5.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.9",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "DesolatorMagno\\AuthorizePhp\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DesolatorMagno\\AuthorizePhp\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
            "test-coverage": "vendor/bin/phpunit --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {

            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
